 <div class="container">
  	<div class="span-24">
      <h1> <h1 style="text-align:center;"><%= @dispute.name %></h1> </h1>
  	</div>

  	<div class="span-4">
      <h2>Ranking</h2>
      
    
    <table>
      <tr>
        <th>Nome do Filme</th>
        <th>Pontuacao</th>
      </tr>
      
      <% @dispute.itens.order('rating DESC').limit(15).each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.rating %></td>
      </tr>
      <% end %>
    </table>
  	</div>
  	<div class="span-16">
  		<% if @dispute!=nil%>
    <table>
      <tr>
        
      </tr>
      
      <tr>
        <td><h3><%= @itens_for_battle.first.name %></h3</td>
        <td><h3><%= @itens_for_battle.second.name %></h3></td>
      </tr>
      <tr>
      <% if ENV["RAILS_ENV"]=='production'%>
        <td>
          <%=link_to image_tag(@itens_for_battle.first.image.url(:small)), { :action => 'vote',
          :id1 => @itens_for_battle.first, :id2 => @itens_for_battle.second, :dispute => @dispute } %> 
        </td>
        <td> 
          <%=link_to image_tag(@itens_for_battle.second.image.url(:small)), { :action => 'vote',
          :id1 => @itens_for_battle.second, :id2 => @itens_for_battle.first, :dispute => @dispute }  %> 
        </td>
        <%else%>
        <td>
          <%=link_to image_tag(@itens_for_battle.first.image.url), { :action => 'vote',
          :id1 => @itens_for_battle.first, :id2 => @itens_for_battle.second, :dispute => @dispute } %> 
        </td>
        <td> 
          <%=link_to image_tag(@itens_for_battle.second.image.url), { :action => 'vote',
          :id1 => @itens_for_battle.second, :id2 => @itens_for_battle.first, :dispute => @dispute }  %> 
        </td>
        <%end%>
      </tr>
          
    </table>
    <% end%>
  </div>    
	
  	<div class="span-24">
  		<div id="fb-root"></div>
      <script src="http://connect.facebook.net/en_US/all.js#appId=248126771877217&amp;xfbml=1"></script><fb:like href="<%=request.url%>" send="false" width="450" show_faces="true" action="like" font=""></fb:like>
  	</div>
  </div>
